<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/kom_native_cover_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kom_native_image_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="192%"
                app:layout_widthPercent="100%" />

            <FrameLayout
                android:id="@+id/kom_native_media_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:gravity="center"
                app:layout_aspectRatio="192%"
                app:layout_widthPercent="100%" />

            <FrameLayout
                android:id="@+id/kom_native_ad_choices_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/kom_native_header_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kom_native_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/kom_native_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/kom_native_sponsored_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/kom_native_title"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/kom_badge_bg"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="2dp"
                        android:text="AD"
                        android:textColor="@android:color/black"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kom_native_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/kom_native_sponsored_label"
                        android:ellipsize="marquee"
                        android:gravity="start|top"
                        android:maxLines="2"
                        android:text="Charge Master"
                        android:textColor="@color/komTextPrimaryColor"
                        android:textSize="18sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/kom_native_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="marquee"
                    android:gravity="start|top"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/kom_native_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:ellipsize="marquee"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/komTextSecondaryColor"
                    android:textSize="15sp"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/kom_native_action_btn"
            style="@style/KomButtonMediumStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Learn More" />
    </LinearLayout>
</FrameLayout>