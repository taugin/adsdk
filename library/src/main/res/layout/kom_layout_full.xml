<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/kom_native_cover_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000">

            <ImageView
                android:id="@+id/kom_native_image_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                app:layout_aspectRatio="192%"
                app:layout_widthPercent="100%" />

            <FrameLayout
                android:id="@+id/kom_native_media_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:gravity="center"
                app:layout_aspectRatio="192%"
                app:layout_widthPercent="100%" />

            <FrameLayout
                android:id="@+id/kom_native_ad_choices_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="4dp" />

        </androidx.percentlayout.widget.PercentRelativeLayout>

        <LinearLayout
            android:id="@+id/kom_native_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kom_native_action_layout"
            android:layout_below="@+id/kom_native_cover_info"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kom_native_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kom_native_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/kom_badge_bg"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="2dp"
                        android:text="AD"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="8sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/kom_native_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Charge Master"
                        android:textColor="@color/komTextPrimaryColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/kom_native_sponsored_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="4dp"
                        android:layout_weight="0"
                        android:background="@drawable/kom_badge_bg"
                        android:gravity="center"
                        android:paddingStart="4dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="2dp"
                        android:text="AD"
                        android:textColor="@android:color/black"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/kom_native_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/kom_native_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/komTextSecondaryColor"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/kom_native_action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kom_native_cancel_btn"
                style="@style/KomButtonFullStyle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/kom_close_bg"
                android:tag="native_cancel_button"
                android:text="@android:string/cancel"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/kom_native_action_btn"
                style="@style/KomButtonFullStyle"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Learn More" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>