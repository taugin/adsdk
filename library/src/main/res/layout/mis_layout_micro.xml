<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/mis_native_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:minHeight="56dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mis_native_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/common_sponsored_label"
                android:ellipsize="end"
                android:gravity="start|top"
                android:maxLines="2"
                android:minHeight="24dp"
                android:text="Charge Master"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mis_native_social"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="marquee"
                android:gravity="start|top"
                android:singleLine="true"
                android:textColor="@color/misTextSecondaryColor"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mis_native_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:minHeight="24dp"
                android:text="Charge Master"
                android:textColor="@color/misTextSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/mis_native_action_btn"
                style="@style/MisButtonMicroStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/mis_action_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="120dp"
                android:maxLines="2"
                android:text="Learn More"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/mis_native_sponsored_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/mis_badge_bg"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="AD"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/mis_native_ad_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="1dp" />
</FrameLayout>