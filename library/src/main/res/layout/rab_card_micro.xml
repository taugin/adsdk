<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/rab_native_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/rab_native_action_btn_layout"
            android:layout_toEndOf="@+id/rab_native_icon"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rab_native_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/common_sponsored_label"
                android:ellipsize="end"
                android:gravity="start|top"
                android:maxLines="2"
                android:text="Charge Master"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rab_native_social"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="marquee"
                android:gravity="start|top"
                android:singleLine="true"
                android:textColor="@color/rabTextSecondaryColor"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rab_native_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:minHeight="24dp"
                android:text="Charge Master"
                android:textColor="@color/rabTextSecondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rab_native_action_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/rab_native_action_btn"
                style="@style/RabButtonMicroStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/rab_action_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="120dp"
                android:maxLines="2"
                android:text="Learn More"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/rab_native_sponsored_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@drawable/rab_badge_bg"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingBottom="2dp"
        android:text="AD"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/rab_native_ad_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="4dp" />
</FrameLayout>