<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/rab_native_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/rab_native_action_btn_layout"
            android:layout_toRightOf="@+id/rab_native_icon"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rab_native_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/common_sponsored_label"
                android:ellipsize="end"
                android:gravity="left|top"
                android:singleLine="true"
                android:text="Charge Master"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rab_native_social"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="marquee"
                android:gravity="left|top"
                android:singleLine="true"
                android:textColor="@color/rab_secondaryColor"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rab_native_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:lines="2"
                android:maxLines="2"
                android:minHeight="24dp"
                android:text="Charge Master"
                android:textColor="@color/rab_secondaryColor"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rab_native_action_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/rab_native_action_btn"
                style="@style/RabButtonTinyStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rab_action_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="Learn More"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/rab_native_sponsored_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rab_badge_bg"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:text="AD"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rab_native_ad_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="4dp" />
</FrameLayout>