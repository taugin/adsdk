<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rab_native_cover_info"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/rab_native_image_cover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:minWidth="120dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:id="@+id/rab_native_media_cover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:gravity="center"
                android:minWidth="120dp" />

            <RelativeLayout
                android:id="@+id/rab_native_ad_choices_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rab_native_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rab_native_cover_info"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/rab_native_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rab_native_action_btn"
                android:layout_toRightOf="@id/rab_native_icon"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/rab_native_sponsored_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/rab_badge_bg"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingTop="2dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="2dp"
                        android:text="AD"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/rab_native_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rab_native_sponsored_label"
                        android:ellipsize="marquee"
                        android:gravity="left|top"
                        android:singleLine="true"
                        android:text="Charge Master"
                        android:textColor="@color/rab_primaryColor"
                        android:textSize="16sp" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rab_native_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="left|top"
                        android:singleLine="true"
                        android:text="detail"
                        android:textColor="@color/rab_secondaryColor"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/rab_native_action_btn"
                style="@style/RabButtonSmallStyle"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:ellipsize="end"
                android:maxWidth="120dp"
                android:maxLines="2"
                android:text="Learn More" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>