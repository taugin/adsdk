<resources>

    <style name="KomButtonBaseStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">84dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="KomButtonStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_action_bg</item>
    </style>

    <style name="KomButtonTinyStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_green_bg</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="KomButtonMicroStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_green_bg</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="KomButtonSmallStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_action_bg</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="KomButtonMediumStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_action_bg</item>
    </style>

    <style name="KomButtonLargeStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_action_bg</item>
    </style>

    <style name="KomButtonFullStyle" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_green_bg</item>
    </style>

    <style name="KomButtonFullStyle_Flat" parent="KomButtonBaseStyle">
        <item name="android:background">@drawable/kom_green_bg</item>
    </style>
</resources>
