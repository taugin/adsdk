<resources>

    <style name="MisButtonBaseStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">84dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MisButtonStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_action_bg</item>
    </style>

    <style name="MisButtonTinyStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_green_bg</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MisButtonMicroStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_green_bg</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="MisButtonSmallStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_action_bg</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="MisButtonMediumStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_action_bg</item>
    </style>

    <style name="MisButtonLargeStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_action_bg</item>
    </style>

    <style name="MisButtonFullStyle" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_green_bg</item>
    </style>

    <style name="Mis" parent="MisButtonBaseStyle">
        <item name="android:background">@drawable/mis_green_bg</item>
    </style>
</resources>
