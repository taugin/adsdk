<resources>
    <attr name="border_color" format="color"/>
    <attr name="border_width" format="dimension"/>
    <attr name="typeface" format="string"/>

    <attr name="cardCornerRadius" format="dimension"/>
    <attr name="cardElevation" format="dimension"/>
    <attr name="contentPadding" format="dimension"/>
    <attr name="cardPreventCornerOverlap" format="boolean"/>
    <attr name="cardUseCompatPadding" format="boolean"/>

    <declare-styleable name="BlinkImageView">
        <attr name="startAlpha" format="integer" />
        <attr name="endAlpha" format="integer" />
        <attr name="baseColor" format="color" />
        <attr name="blinkDuration" format="integer" />
    </declare-styleable>
    <declare-styleable name="DotProgress">
        <attr name="stepCount" format="integer" />
        <attr name="emptyAlpha" format="integer" />
        <attr name="dotBaseColor" format="color" />
        <attr name="filledAlpha" format="integer" />
        <attr name="dotRadius" format="dimension" />
    </declare-styleable>
</resources>
