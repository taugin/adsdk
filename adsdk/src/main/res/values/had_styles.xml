<resources>

    <style name="CardStyle">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AdButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/had_action_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AdButtonLargeStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/had_action_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AdButtonFullStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/had_green_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AdButtonFullStyle_Flat">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/had_green_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--for lock screen-->
    <style name="AdCMStageTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@drawable/had_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AdCMCompleteStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdCMTimeStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AdCMUnitStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AdCMStageLabelStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#7fffffff</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AdCMBatteryPercentNum">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="AdCMBatteryPercent">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">top|left</item>
    </style>
</resources>
