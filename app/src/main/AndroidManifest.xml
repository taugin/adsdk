<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hauyu.adsdk.demo">

    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <application
        android:name="com.hauyu.adsdk.demo.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hauyu.adsdk.demo.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="um.5f44faa1f9d1496ef418b17c" />
            </intent-filter>
        </activity>
        <activity android:name="com.hauyu.adsdk.demo.AdListViewActivity" />
        <activity android:name=".CustomViewActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivity_Theme" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <meta-data
            android:name="applovin.sdk.verbose_logging"
            android:value="true" />

        <provider
            android:name=".SyncProvider"
            android:authorities="${applicationId}.sync"
            android:enabled="true"
            android:exported="true">
            <!--        android:syncable="true"-->
            <meta-data
                android:name="android.content.ContactDirectory"
                android:value="true" />
        </provider>
    </application>

</manifest>