<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/enter_overdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="EnterOverDraw" />

        <Button
            android:id="@+id/enter_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="EnterUsage" />

        <Button
            android:id="@+id/enter_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Permission" />

        <Button
            android:id="@+id/all_files_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="All Files Access" />


        <CheckBox
            android:id="@+id/notification_listener"
            style="@android:style/Widget.DeviceDefault.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:text="NotificationListener" />

    </LinearLayout>
</ScrollView>